{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "backend/node_modules",
    "backend/.gitignore",
    "backend/package-lock.json",
    "backend/tsconfig.json",
    "backend/.env"
  ]
}